{
  "name": "mia-ai-chatbot",
  "version": "1.0.0",
  "description": "Mia - Your friendly fox girl AI companion with math capabilities",
  "main": "app.js",
  "homepage": "./",
  "scripts": {
    "start": "npx electron .",
    "start-cli": "node index.js",
    "start-web": "node server.js",
    "start-overlay": "npx electron overlay.js",
    "build": "npx electron-builder",
    "build-win": "npx electron-builder --win",
    "build-linux": "npx electron-builder --linux",
    "build-mac": "npx electron-builder --mac",
    "dist": "npx electron-builder --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ai",
    "chatbot",
    "companion",
    "math",
    "fox-girl"
  ],
  "author": "BlueBoy",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron-updater": "^6.6.2",
    "openai": "^4.0.0",
    "readline": "^1.3.0",
    "sentiment": "^5.0.2",
    "@google/generative-ai": "^0.21.0",
    "express": "^4.18.2",
    "three": "^0.164.1",
    "@pixiv/three-vrm": "^2.0.6",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.blueboy.miaai",
    "productName": "Mia AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md",
      "!package-lock.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "mia-ai-app"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    }
  }
}
